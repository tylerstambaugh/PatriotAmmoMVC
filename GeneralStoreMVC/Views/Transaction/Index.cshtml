@model IEnumerable<GeneralStore.Models.TransactionModels.TransactionDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create Transaction", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactionDate)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.ActionLink("Update", "Edit", new { id = item.TransactionId }) |
                    @Html.ActionLink("More Info", "Details", new { id = item.TransactionId }) |
                    @Html.ActionLink("Remove", "Delete", new { id = item.TransactionId })
                </td>
        
            </tr>
        }
    }

</table>
